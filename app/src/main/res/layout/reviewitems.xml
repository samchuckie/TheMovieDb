<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/author"
        tools:text="Author"
        tools:visibility="visible"
        android:textSize="16sp"
        android:drawableStart="@drawable/ic_rate_review_black_24dp"
        android:drawableLeft="@drawable/ic_rate_review_black_24dp"
        android:textStyle="bold|italic"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/movie_content"
        tools:text="Content"
        android:visibility="gone"
        tools:visibility="visible"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="Hide review"
        android:text="@string/hide_review"
        android:id="@+id/hide_data"
        android:textSize="16sp"
        android:visibility="gone"
        />
</LinearLayout>